local function formatTime(seconds)
    if not seconds then return "0:00" end
    seconds = math.floor(tonumber(seconds) or 0)
    local minutes = math.floor(seconds / 60)
    local remainingSeconds = seconds % 60
    return string.format("%d:%02d", minutes, remainingSeconds)
end

local function updateTimerDisplay()
    if not TimerLabel or not StatusLabel then return end
    if not gameStatsPath then return end
    
    local timerValue = gameStatsPath:GetAttribute("Timer")
    local roundStarted = gameStatsPath:GetAttribute("RoundStarted")
    
    if timerValue then
        TimerLabel.Text = formatTime(timerValue)
        TimerLabel.TextColor3 = timerValue <= 5 and Color3.fromRGB(215, 100, 100) or Color3.fromRGB(165, 194, 255)
    else
        TimerLabel.Text = "0:00"
        TimerLabel.TextColor3 = Color3.fromRGB(165, 194, 255)
    end
    
    StatusLabel.Text = roundStarted and "ROUND ACTIVE" or "INTERMISSION"
end

TimerLabel, StatusLabel, MainInterface = CreateTimerGUI()

local RunService = game:GetService("RunService")
local fallbackConnection

fallbackConnection = RunService.Heartbeat:Connect(function()
    updateTimerDisplay()
end)

updateTimerDisplay()
setupAttributeConnections()

workspace.ChildAdded:Connect(function(child)
    if child.Name == "Game" then
        local newStatsFolder = child:WaitForChild("Stats")
        if newStatsFolder then
            gameStatsPath = newStatsFolder
            setupAttributeConnections()
        end
    end
end)
